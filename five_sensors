#include <SoftwareSerial.h>
#include<String.h>
SoftwareSerial xbee(2, 3); // RX, TX
char buf[10];
bool received[1000];
int i=0;
int y;
float x=0, thermistor, resistor = 10000;
float sum=0, Temp, adc1, offset=1;
char num;


void setup()
{ 
  for (y=0;y<1000;y++)
  received[y]=0;
    Serial.begin(9600);

    Serial.println( "Arduino started receiving bytes via XBee" );

    // Set the data rate for the SoftwareSerial port.
    xbee.begin(9600);
}

void loop()  {
if (xbee.available()) {
     xbee.readBytesUntil('a',buf,8);
//
     float adc;
     adc = analogRead(A1);
     
     adc1 = (1023 / adc) -1;
     thermistor = resistor/adc1;

     Temp = log(((10230000/adc) - 10000)); // Minus by 10K as that's the resistor in series with the thermistor
     Temp = 1 / (0.001129148 + (0.000234125 * Temp) + (0.0000000876741 * Temp * Temp * Temp));
     Temp = Temp - 273.15+offset; // Convert Kelvin to Celcius 
//
      num=buf[0];
      buf[0]='0';
     x = atof(buf);
     if(received[num])
     {
     //
       Serial.print("I am sensor #");
     Serial.print('5');
     i += 1;
     Serial.print(", My temperature is:");
      Serial.println(Temp);
      sum = Temp + sum;
     //
     Serial.print("average is: ");
     Serial.println(sum/i); 
     i=0;
     sum=0 ;
     for (y=0;y<1000;y++)
     received[y]=0;
 
     }
     else
     {
       Serial.print("I am sensor #");
     Serial.print(num);
     Serial.print(", My temperature is:");
      Serial.println(x);
     sum = x + sum; 
     i++;
     received[num]=1;
     
     }

}
    //delay(10);
}
