#include <SensorOp.h>

const int sensorPin = A1;
const int ledControl = 2;
const int samples = 4;
const int filtro = 7;

SensorOp sensor(ledControl,sensorPin,samples);

int sensorRead1;
int sensorRead2;
int sensorRead3;
int sensorRead4;
int count = 0;
int flag=0;
boolean preState = true;
int begintime;
int endtime;
int len=21000;
int s;
int t;

void setup() 
{
  Serial.begin(9600); 
  pinMode(ledControl, OUTPUT);
}

void loop() 
{
  digitalWrite(ledControl,HIGH); 
  delay(2);
  sensorRead1 = analogRead(1); 
  sensorRead2 = sensor.readSensor(); 
  sensorRead3 = sensor.readSensor(sensorRead3); 
  sensorRead4 = sensor.readSensor(sensorRead4,filtro); 
//  Serial.print("read: ");
//  Serial.print(sensorRead1);      
//  Serial.print("\tflag: ");
//  Serial.print(flag);   
//  Serial.print(sensorRead2);      
//  Serial.print("\t");
  //Serial.print(sensorRead3);      
  //Serial.print("\t");
  //Serial.println(sensorRead4);
// while(sensorRead1== 0)
// Serial.println(sensorRead1); 
   

   if(analogRead(1)==0)
   {begintime=millis();
   flag=0;
   while(analogRead(1)==0)
   //Serial.println(analogRead(1));  
   digitalWrite(4, LOW); 
   endtime=millis();
   
     t=endtime-begintime;
      s=len/t;
    Serial.print("\tbegintime: "); 
   Serial.print(begintime);
       Serial.print("\tendtime: "); 
   Serial.print(endtime);
          Serial.print("\ttime: "); 
   Serial.println(t);
    Serial.print("\tWheel speed: "); 
    Serial.print(s);
    Serial.println(" cm/s");
    digitalWrite(4, HIGH);
    analogWrite(5, s);
   }

  
//    Serial.print("\tspeed: "); 
//   Serial.println(s);
   //flag=0;
  

//  while(sensorRead1!= 0)
//  Serial.println(sensorRead1);  


//pulsetimes();
  
 // delay(7); 
                      
}


void pulsetimes() {
  if (flag != preState){
    count++;
    preState = flag;
  }
  
}
