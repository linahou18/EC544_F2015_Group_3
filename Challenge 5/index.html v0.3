  <body onload="draw()">
    <div class="container">
        <h1>Localization using XBee</h1>
    <div class="row">
      <div class="col-md-5">
      <h4>RSSI Values</h4>
      <textarea class="form-control" style="background:#ffffff; color:#000000;" rows="4" id="inData"></textarea>
