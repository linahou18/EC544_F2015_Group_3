      <div class="col-md-3">
      <h4>Localization Control</h4>
      <div class="btn-group">
          <p><button type="button" id="ledOn" class="btn btn-success">Refresh location</button>
            <button type="button" id="ledOff" class="btn btn-danger">Halt localization</button></p>
      </div>
      </div>

